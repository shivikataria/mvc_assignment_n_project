
@{
    ViewBag.Title = "jqry";
}<script>
    $(document).ready(function () {
        $("#btn1").click(function () {

            $("#ttt").slideUp();
        });
        $("#btn2").click(function () {

            $("#ttt").slideDown();
        });

    });

</script>

<input id="btn1" type="button" value="Hide" />
<input id="btn2" type="button" value="Show" />
